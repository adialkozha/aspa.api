@model AspaApp.Models.ProductListViewModel

@{
    if (User.Identity.IsAuthenticated == true)
    {

        Layout = "_Layout2";
    }
    else
    {

        Layout = "_Layout";
    }

    ViewBag.Title = "Каталог товаров";
}

<h2>Удалить товар</h2>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Названия: </label>
        <input name="name" class="form-control" />
        <label class="control-label">Категория: </label>
        <select name="company" class="form-control">
            <option value="1">Еда</option>
            <option value="2">Хозяйственные товары</option>

        </select>

        <input type="submit" value="Найти" class="btn btn-default bg-dark text-white" />

    </div>
</form>



@foreach (var item in Model.Products)
{


    <div class="row mb-0">
        <div class="col-md-10">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
                <div class="card-body d-flex flex-column align-items-start">
                    <strong class="d-inline-block mb-2 text-primary">Название: @item.ProductName</strong>
                    <h3>Стоимость: @item.ProductCost тг</h3>

                    <p class="card-text mb-auto">Категория: @item.Сategory.СategoryName</p>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@item.ProductId">Удалить</a>
                </div>
                @if (item.ProductImage != null)
                {
                    <img class="card-img-right flex-auto d-none d-md-block" style='width:300px; height:250px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ProductImage))">
                }
            </div>
        </div>
    </div>

    <br>





}

